<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hhd.idiom.mapper.IdiomMapper">

    <insert id="insert">
        INSERT INTO idiom (idiom, pinyin)
        VALUE (#{idiom.idiom}, #{idiom.pinyin})
    </insert>

    <update id="update">
        UPDATE idiom
        <set>
            <if test="idiom.idiom != null and idiom.idiom != ''">
                idiom = #{idiom.idiom}
            </if>
            <if test="idiom.pinyin != null and idiom.pinyin != ''">
                pinyin = #{idiom.pinyin}
            </if>
        </set>
        WHERE id = #{idiom.id}
    </update>

    <select id="getList" resultType="com.hhd.idiom.bean.Idiom">
        SELECT `id`, `idiom`, `pinyin`
        FROM idiom
        <where>
            <if test="idiom.idiom != null and idiom.idiom != ''">
                idiom = #{idiom.idiom}
            </if>
            <if test="idiom.pinyin != null and idiom.pinyin != ''">
                pinyin LIKE  CONCAT(#{idiom.pinyin}, '%')
            </if>
        </where>
        LIMIT 0, 50
    </select>

</mapper>
